{
  "name": "slim-to-erb",
  "displayName": "Slim to ERB Converter",
  "description": "Convert Slim template files to ERB format directly in VS Code",
  "version": "0.1.2",
  "publisher": "antarrb",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "slim",
    "erb",
    "rails",
    "ruby",
    "template",
    "converter"
  ],
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/antarr/slim-to-html.git"
  },
  "bugs": {
    "url": "https://github.com/antarr/slim-to-html/issues"
  },
  "homepage": "https://github.com/antarr/slim-to-html#readme",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "slim-to-erb.convertFile",
        "title": "Convert Slim to ERB",
        "category": "Slim"
      },
      {
        "command": "slim-to-erb.convertDirectory",
        "title": "Convert Directory (Slim to ERB)",
        "category": "Slim"
      },
      {
        "command": "slim-to-erb.previewConversion",
        "title": "Preview Slim to ERB Conversion",
        "category": "Slim"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "slim-to-erb.convertFile",
          "when": "resourceExtname == .slim",
          "group": "slim@1"
        },
        {
          "command": "slim-to-erb.previewConversion",
          "when": "resourceExtname == .slim",
          "group": "slim@2"
        },
        {
          "command": "slim-to-erb.convertDirectory",
          "when": "explorerResourceIsFolder",
          "group": "slim@3"
        }
      ],
      "commandPalette": [
        {
          "command": "slim-to-erb.convertFile",
          "when": "editorLangId == slim"
        },
        {
          "command": "slim-to-erb.previewConversion",
          "when": "editorLangId == slim"
        }
      ]
    },
    "configuration": {
      "title": "Slim to ERB",
      "properties": {
        "slimToErb.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation in generated ERB files"
        },
        "slimToErb.createBackup": {
          "type": "boolean",
          "default": true,
          "description": "Create backup files before conversion"
        },
        "slimToErb.deleteOriginal": {
          "type": "boolean",
          "default": false,
          "description": "Delete original .slim files after successful conversion"
        },
        "slimToErb.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom output directory for converted files (empty = same directory)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest",
    "package": "./scripts/package-only.sh",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "jest": "^30.0.5",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.0.3",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {}
}
